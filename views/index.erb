<% content_for :page_label do %>
Check out these files
<%end%>
  <ul>
  <% @files.each do |file| %>
    <li>
      <strong><a href = "/<%= file %>"><%= file %></a></strong>
      <small><form class="inline" method="get" action="/<%= file %>/edit" >
        <button type="submit">Edit</button>
      </form>
      <form class="inline" method="post" action="/<%= file %>/delete" >
        <button type="submit">Delete</button>
      </form></small>
    </li>
  <% end %>
</ul>

<p><a href = "/new">New Document</a></p>
<% if session[:user] %>
  <form class="inline" method="post" action="/user/logout" >
    <p class="user-status">Signed in as <%= session[:user] %>
    <button type="submit">Sign Out</button>
    </p>
  </form>
<% else %>
<form class="inline" method="get" action="/user/login" >
    <button type="submit">Sign In</button>
  </form>
  <form class="inline" method="get" action="/user/new" >
    <button type="submit">Sign Up</button>
  </form>
<% end %>

